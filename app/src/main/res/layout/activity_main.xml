<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#cbe5f1"
    android:orientation="vertical"
    android:weightSum="6"
    tools:context="com.huongtlu.app_thuc_don.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#5663da"
        android:orientation="horizontal"
        android:weightSum="2">

        <ImageView
            android:layout_width="100sp"
            android:layout_height="90sp"
            android:layout_weight="1"
            app:srcCompat="@drawable/logo" />

        <TextView
            android:id="@+id/txtName"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingLeft="20sp"
            android:paddingTop="20sp"
            android:text="MÓN NGON MỖI NGÀY "
            android:textAlignment="center"
            android:textColor="#fdfbfb"
            android:textSize="26sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:background="#5bfa68"
        android:orientation="horizontal"
        android:weightSum="2">

        <ImageView
            android:layout_width="30sp"
            android:layout_height="40sp"
            android:layout_marginTop="22dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/thucdon1" />

        <Button
            android:id="@+id/btnChebien"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Thực đơn mỗi ngày"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:background="#5bfa68"
        android:orientation="horizontal"
        android:weightSum="4">

        <ImageView
            android:layout_width="30sp"
            android:layout_height="40sp"
            android:layout_marginTop="22dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/dinhduong1" />

        <Button
            android:id="@+id/btnThucpham"
            android:layout_width="34dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:text="Món ăn dinh dưỡng"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:background="#5bfa68"
        android:orientation="horizontal"
        android:weightSum="3">

        <ImageView
            android:layout_width="28sp"
            android:layout_height="40sp"
            android:layout_marginTop="22dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/yeuthich" />

        <Button
            android:id="@+id/btnBuaan"
            android:layout_width="109dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="Bữa ăn yêu thích"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:background="#5bfa68"
        android:orientation="horizontal"
        android:weightSum="3">

        <ImageView
            android:layout_width="28sp"
            android:layout_height="40sp"
            android:layout_marginTop="29dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/tintuc" />

        <Button
            android:id="@+id/btnTintuc"
            android:layout_width="106dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="Tin tức"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:background="#aab3e9"
        android:orientation="horizontal"
        android:weightSum="3">

        <Button
            android:id="@+id/btnTuvan"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Tư vấn"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btnQuanan"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Quán ăn"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btnCapnhat"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Ghi chú"
            android:textSize="18sp" />
    </LinearLayout>
</LinearLayout>
